<script>
    // 搜索事件
    document.getElementById('topSearch').onkeydown = function(event){
        let searchExp = document.getElementById('topSearch').value;
        if (searchExp == '') searchExp = 'null'
        if (event.keyCode == 13){
            // for-debug --reserve
            console.log('Enter in topSearch detected!');
            // 获取当前路径
            let currPath = window.location.pathname;
            if (currPath == '/' || currPath == '/index'){
                redirectSpecial(searchExp, 'null', 0, 999999);
            }else{
                let regex = /\/search=(.*)-sort=(.*)-min=(\d+)-max=(\d+)/;
                let result = currPath.match(regex);
                redirectSpecial(searchExp, result[2], result[3], result[4]);
            }
            return false
        }
    }
</script>