<script>
    document.getElementById('topSearch').onkeydown = function(event){
        let searchExp = document.getElementById('topSearch').value;
        if (event.keyCode == 13){
            console.log('success!');
            currPath = window.location.pathname;
            if (currPath == '/' || currPath == '/index.html'){
                console.log('success!');
                console.log("/search=" + searchExp +  "-sort=null-min=0-max=999999");
                window.location.href = "/search=" + searchExp +  "-sort=null-min=0-max=999999#itemNav"
                return false;
            }else{
                let regex = /\/search=(.*)-sort=(.*)-min=(\d+)-max=(\d+)/;
                let result = currPath.match(regex);
                
                let sortMode = result[2];
                let priceMin = result[3];
                let priceMax = result[4];
                
                
                searchHref = 'search=' + searchExp + '-sort=' + sortMode +'-' + 'min=' + priceMin + '-max=' + priceMax + '#itemNav';
                window.location.href = searchHref
                return false;
            }
            
        }
    }
</script>